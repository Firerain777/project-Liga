          in: query
          required: true
          description: id_пользователя
          schema:
            type: number
            default: 12334
      responses:
        '200':
          description: Список стажировок
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/traineeship'
        '401':
          description: Неавторизован
        '404':
          description: Сервер не найден

